[Unit]
Description=MatrixHub PostgreSQL container
Requires=docker.service
After=docker.service

[Service]
Restart=always
RestartSec=5
TimeoutStartSec=0
ExecStart=/usr/bin/docker start -a matrixhub-db
ExecStop=/usr/bin/docker stop -t 20 matrixhub-db
ExecStartPre=/usr/bin/docker ps -a --format '{{.Names}}' | /usr/bin/grep -qx matrixhub-db

[Install]
WantedBy=multi-user.target
