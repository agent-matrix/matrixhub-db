# Copy to .env.db and set your production values
# Default Postgres user/password (used in docker scripts)
POSTGRES_USER=matrix
POSTGRES_PASSWORD=CHANGEME_IN_PRODUCTION
POSTGRES_DB=matrixhub

# Optional: extra empty DB(s), comma-separated (gateway runs its own migrations)
CREATE_EXTRA_DBS=mcpgateway

# Network/volume defaults (override if needed)
NETWORK_NAME=matrixhub-net
VOLUME_NAME=matrixhub-pgdata
PG_HOST_PORT=5432
NETWORK_ALIAS=db

# Container/image naming
IMAGE_NAME=matrixhub-postgres
IMAGE_TAG=16-matrixhub
CONTAINER_NAME=matrixhub-db

# Security â€” set allowed client CIDRs in pg_hba on first init (comma separated)
# Example for internal only: 10.0.0.0/8,192.168.0.0/16
PG_ALLOW_CIDR=0.0.0.0/0

# Monitoring (exporter)
METRICS_USER=metrics
METRICS_PASSWORD=CHANGE_ME_STRONG

# PgBouncer (optional)
PGBOUNCER_PORT=6432
PGBOUNCER_DEFAULT_POOL_SIZE=50
PGBOUNCER_MAX_CLIENT_CONN=2000
